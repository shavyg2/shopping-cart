{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.ts",
            "use": "@now/node@canary"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.ts",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "OPTIONS, GET, POST, PUT, DELETE",
                "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization"
            },
            "methods":["GET","PUT","POST","DELETE"]
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1/index.ts",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "OPTIONS, GET, POST, PUT, DELETE",
                "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization"
            },
            "methods":["GET","PUT","POST","DELETE"]
        }
    ]
}